{
  "compilerOptions": {
    "outDir": ".type",
    "target": "ESNext",
    "module": "esnext",
    "importHelpers": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "test/**/*.ts", "test/**/*.vue"],
  "exclude": ["coverage", "node_modules", "dist"]
}